<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- INFO DEL USUARIO -->
    <LinearLayout
        android:id="@+id/userInfo"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="#444"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invitado"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/tvTitle"
        android:text="UrbanBuy"
        android:textSize="32sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- INICIAR SESIÓN -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="30dp"
        app:backgroundTint="#6200EE"
        android:textColor="@android:color/white" />

    <!-- REGISTRARSE -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="30dp"
        app:backgroundTint="#2196F3"
        android:textColor="@android:color/white" />

    <!-- PRODUCTOS (OCULTO SI NO ESTÁ LOGUEADO) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProducts"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Productos"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="30dp"
        app:backgroundTint="#4CAF50"
        android:textColor="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRecharge"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recargar saldo"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="30dp"
        app:backgroundTint="#9C27B0"
        android:textColor="@android:color/white" />


    <!-- UBICACIÓN -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Ubicación"
        android:textSize="18sp"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="30dp"
        app:backgroundTint="#FF9800"
        android:textColor="@android:color/white" />

    <!-- CERRAR SESIÓN (OCULTO SI NO ESTÁ LOGUEADO) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:textSize="18sp"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="30dp"
        app:backgroundTint="#F44336"
        android:textColor="@android:color/white" />



    <!-- EDITAR CUENTA (OCULTO SI NO ESTÁ LOGUEADO) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditAccount"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Cuenta"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="30dp"
        app:backgroundTint="#9C27B0"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo: $0"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>

